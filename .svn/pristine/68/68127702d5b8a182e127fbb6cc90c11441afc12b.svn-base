@charset "utf-8";
.mainCon li{
	width: 180px;
	height: 180px;
	background:#efefef;
	border:1px solid #eaeaea;
	float:left;
	margin:0 0px 30px 18px;
	position:relative;
	cursor: default;
}
.mainCon li:hover{
	-webkit-transform: scale(1.1);
	-moz-transform: scale(1.1);
	-ms-transform: scale(1.1);
	transform: scale(1.1);
}
.margT_categ{
	margin-top:45px;
}
.categName,
.remarkDiv{
	width: 100%;
	height: 90px;
	text-align: center;
}
.categName{
	background: url(../images/categBg.jpg) no-repeat;
	color:#fff;
}
.remarkDiv{
	color:#666;
}
.categName strong,
.remarkDiv strong{
	font-weight: normal;
	display: inline-block;
}
.categName strong{
	font-size: 24px;
	margin:30px 0 5px 0px;
}
.remarkDiv strong{
	font-size:16px;
	margin:10px 0 2px 0px;
}
.remarkDiv p{
	font-size:14px;
}
.editBtn{
	width: 38px;
	height: 38px;
	position:absolute;
	right:0px;
	top:0px;
}
.triR{
	border-width:19px;
	border-style:solid solid dashed dashed;
	border-color:#efefef #efefef transparent transparent;
}
.editIcon{
	color:#005172;
	position:absolute;
	left:2px;
	top:-20px;
	font-size: 16px;
}
